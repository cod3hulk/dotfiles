source ~/.dotfiles/nvim/config/common.vim
nmap ,,w :action AceJumpAction<cr>
nmap ,x :action VimFileSaveClose<cr>
nmap ,qq :action CloseContent<cr>
nmap ,r :action Run<cr>
nmap ,R :action RunClass<cr>
nmap ,f :action VimForward<cr>
nmap ,b :action VimBack<cr>
nmap ,e :action FileStructurePopup<cr>
nmap gR :action RenameElement<cr>
nmap g; :action JumpToLastChange<cr>
nmap g, :action JumpToNextChange<cr>
nmap ,m :action HideAllWindows<cr>
nmap qo :action CloseAllEditorsButActive<cr>
nmap ,Q :action CloseProject<cr>
nmap <c-]> :action MethodDown<cr>
nmap <c-[> :action MethodUp<cr>

" spacemacs like mappings
nmap <LEADER>bm :action CloseAllEditorsButActive<cr>
nmap <LEADER>ff :action SearchEverywhere<cr>
nmap <LEADER>fr :action RecentFiles<cr>
nmap <LEADER>qq :action CloseProject<cr>
nmap <LEADER>jj :action AceAction<cr>
nmap <LEADER>ji :action FileStructurePopup<cr>
nmap <LEADER>rr :action Run<cr>

let g:WhichKeyDesc_find_recent_files  = "<Space>fr find recent"

" plugins
set surround
set which-key

set notimeout
set timeoutlen = 5000
